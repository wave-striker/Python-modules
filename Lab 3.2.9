while True:  # Start an infinite loop
    word = input("Enter a word: ")  # Prompt the user to enter a word
    if word == "chupacabra":  # Check if the entered word is "chupacabra"
        print("You've successfully left the loop.")  # Print the exit message
        break  # Exit the loop
    # If the entered word is not "chupacabra", the loop continues
